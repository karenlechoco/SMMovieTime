<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cinema_list"
    android:background="@drawable/transparentborder"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    		        
	<TextView
		android:id="@+id/cinema_name"
		android:text=""
		android:textColor="#fff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
		        
	<TextView
		android:id="@+id/ticket_price"
		android:text=""
		android:textColor="#fff"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp" />
		        
	<LinearLayout 
		android:id="@+id/date_list"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp" >
		            
		<TextView
			android:id="@+id/date1"
			android:text=""
			android:textColor="#fff"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		            
		<LinearLayout 
			android:id="@+id/time_list"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp" >
			            
			<TextView
				android:id="@+id/time1"
				android:text=""
				android:textColor="#3BB9FF"
				android:textStyle="italic"
				android:layout_marginRight="8dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:onClick="onClick()" />
		       		
		</LinearLayout> <!-- end of time list -->
		            
	</LinearLayout> <!-- end of date list -->
		        
</LinearLayout> <!-- end of cinema list -->