<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/global_bg_portrait"
    android:orientation="vertical" >

    <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:scrollbars="none" >
    	
        <LinearLayout
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="vertical" >
    		
	        <ImageView
		        android:background="@drawable/back"
		        android:layout_width="fill_parent"
		        android:layout_height="3dp"/>
		    
		    <TextView
		        android:id="@+id/movietitle"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:textStyle="bold"
		        android:text="@string/movietitle"
		        android:textColor="#fff"
		        android:textSize="20dp" />
		
		    <ImageView
		        android:background="@drawable/back"
		        android:layout_width="fill_parent"
		        android:layout_height="3dp"
		        android:layout_marginBottom="10dp" />
		    
		    <TextView
		        android:id="@+id/location_crumbs"
		        android:text=""
		        android:textColor="#fff"
		        android:background="#000"
		        android:padding="5dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp" />"
		    
		    <TextView
		        android:id="@+id/guarseat"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:background="#000"
		        android:padding="10dp"
		        android:textSize="15dp"
		        android:text="@string/guaranteed_seating"
		        android:textColor="#fff" />
		    
		    <TextView
		        android:id="@+id/purchase_info"
		        android:text="@string/guaranteed_seating"
		        android:background="#a5000000"
		        android:padding="10dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:textSize="13dp"
		        android:textColor="#fff"/>
		    
		    <TextView
		        android:id="@+id/resseat"
		        android:text="@string/reserve_seats"
		        android:background="#000"
		        android:textColor="#fff"
		        android:padding="10dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp" />
		    
		    <TextView
		        android:id="@+id/payopt"
		        android:text="@string/payment_options"
		        android:background="#000"
		        android:textColor="#fff"
		        android:padding="10dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp" />
		    
		
		    <RadioGroup
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
		
		        <RadioButton
		            android:width="20dp"
		            android:height="20dp"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="G-Cash"
		            android:textSize="13dp"
		            android:textColor="#fff" />
		        
		        <RadioButton
		            android:width="20dp"
		            android:height="20dp"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="PayPal"
		            android:textSize="13dp"
		            android:textColor="#fff" />
		        
		        <RadioButton
		            android:width="20dp"
		            android:height="20dp"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="MasterCard"
		            android:textSize="13dp"
		            android:textColor="#fff" />
		        
		        <RadioButton
		            android:width="20dp"
		            android:height="20dp"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="VISA"
		            android:textSize="13dp"
		            android:textColor="#fff" />
		        
		    </RadioGroup>
		
		    <Button
		        android:id="@+id/next"
		        android:layout_width="fill_parent"
		        android:layout_height="35dp"
		        android:layout_marginTop="15dp"
		        android:gravity="center"
		        android:text="@string/next" />
        </LinearLayout>
        
	    
    </ScrollView>
</LinearLayout>