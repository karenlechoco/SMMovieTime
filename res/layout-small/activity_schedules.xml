<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/global_bg_portrait" >
    
    <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:scrollbars="none" >
    	
        <LinearLayout
            android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:orientation="vertical" >
    
		    <ImageView
		        android:background="@drawable/back"
		        android:layout_width="fill_parent"
		        android:layout_height="3dp"/>
		    
		    <TextView
		        android:id="@+id/movietitle"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:padding="5dp"
		        android:textStyle="bold"
		        android:background="#000"
		        android:text=""
		        android:textColor="#fff"
		        android:textSize="15dp" />
		
		    <ImageView
		        android:background="@drawable/back"
		        android:layout_width="fill_parent"
		        android:layout_height="3dp"
		        android:layout_marginBottom="10dp" />
		    
		    <TextView
		        android:id="@+id/location_crumbs"
		        android:textColor="#fff"
		        android:background="#000"
		        android:padding="5dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="10dp" />
		    
		    <LinearLayout
		        android:id="@+id/cinema_list"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="#000"
		        android:orientation="vertical"
		        android:padding="5dp" >
		        
		        <TextView
		            android:id="@+id/cinema_name"
		            android:text="Imax (IMAX 3D)"
		            android:textColor="#fff"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content" />
		        
		        <TextView
		            android:id="@+id/ticket_price"
		            android:text="Php 250.00"
		            android:textColor="#fff"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="5dp" />
		        
		        <LinearLayout 
		            android:id="@+id/dates_list"
		            android:orientation="vertical"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="30dp" >
		            
		            <TextView
			            android:id="@+id/date1"
			            android:text="January 31, 2012"
			            android:textColor="#fff"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content" />
		            
		            <LinearLayout 
			            android:id="@+id/time_list"
			            android:orientation="horizontal"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginLeft="30dp" >
			            
		                <TextView
				            android:id="@+id/time1"
				            android:text="12:00"
				            android:textColor="#fff"
				            android:layout_marginRight="6dp"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" />
		                
		                <TextView
				            android:id="@+id/time1"
				            android:text="2:30"
				            android:textColor="#fff"
				            android:layout_marginRight="6dp"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" />
		                
		                <TextView
				            android:id="@+id/time1"
				            android:text="7:00"
				            android:textColor="#fff"
				            android:layout_marginRight="6dp"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" />
		       		
		       		</LinearLayout> <!-- end of time list -->
		            
		        </LinearLayout> <!-- end of date list -->
		        
		    </LinearLayout> <!-- end of cinema list -->

		</LinearLayout>
        
    </ScrollView>

</LinearLayout>
